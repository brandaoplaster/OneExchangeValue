<div class="col-md-4 container-form">
  <h2 class="text-center">Faça sua conversão de moedas</h2>

  <%= form_tag('/convert', method: :get, id: 'exchange_form', :class => 'login-form') do %>
    <div class="form-group">
      <label for="source_currency" class="text-uppercase">Moeda Local</label>
      <%= select_tag 'source_currency', options_for_select(currency_list, 'BRL'), class: 'form-control', id: 'source_currency' %>
    </div>

    <div class='form-group'>
      <input type='number' name='amount' id='amount' class='form-control' placeholder='Quantidade ($10)' step='any' required>
    </div>

    <div class="form-check-label mb-3">
      <button id="reverses" class='btn btn-primary btn-sm col-md-12'>Trocar</button>
    </div>

    <div class="form-group">
      <label for="target_currency" class="text-uppercase">Moeda Pretendida</label>
      <%= select_tag 'target_currency', options_for_select(currency_list, 'EUR'), class: 'form-control', id: 'target_currency' %>
    </div>

    <div class='form-group'>
      <input type='text' id='result' name='result' class='form-control' placeholder='Resultado' readonly>
    </div>

  <% end %>
</div>
